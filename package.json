{
  "name": "webkit",
  "version": "1.0.0",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prof:cpu": "cross-env NODE_ENV=local tsx --prof --inspect=0.0.0.0:9229 -r ts-node/register src/main.ts",
    "start:local": "cross-env NODE_ENV=local tsx --watch src/main.ts",
    "start:local:migratin": "npm run migration:run && npm run start:local",
    "start:debug": "cross-env NODE_ENV=local tsx --watch --inspect=127.0.0.1:9210 src/main.ts",
    "start:test": "cross-env NODE_ENV=test tsx watch src/main.ts",
    "start:dev": "cross-env NODE_ENV=development tsx watch src/main.ts",
    "start:prod": "cross-env NODE_ENV=production tsx src/main.ts",
    "prepare": "husky",
    "typeorm": "typeorm-ts-node-esm",
    "migration:create": "npm run typeorm -- migration:create",
    "migration:generate": "npm run typeorm -- migration:generate -d src/integrations/postgress/data-source.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/integrations/postgress/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/integrations/postgress/data-source.ts",
    "seed:users": "tsx src/scripts/seed-users.ts",
    "test": "vitest --run",
    "test:unit": "vitest --project unit",
    "test:integ": "vitest --project integ",
    "coverage": "vitest run --coverage",
    "pm2": "pm2 start ecosystem.config.cjs --env production",
    "pm2:local": "pm2 start ecosystem.config.cjs --env local",
    "pm2:dev": "pm2 start ecosystem.config.cjs --env development",
    "pm2:stop": "pm2 stop ecosystem.config.cjs",
    "pm2:restart": "pm2 restart ecosystem.config.cjs",
    "pm2:monitor": "pm2 monitor",
    "pm2:list": "pm2 list",
    "pm2:logs": "pm2 logs",
    "pm2:delete": "pm2 delete ecosystem.config.cjs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^2.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "express-slow-down": "^3.0.1",
    "express-validator": "^7.3.0",
    "helmet": "^8.1.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "0.3.27",
    "winston": "^3.18.3",
    "winston-loki": "^6.1.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@testcontainers/postgresql": "^11.8.1",
    "@types/express": "^5.0.3",
    "@types/node": "^24.9.1",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "cross-env": "^10.1.0",
    "eslint": "^9.38.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "3.6.2",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SiarhKul/webkit.git"
  },
  "bugs": {
    "url": "https://github.com/SiarhKul/webkit/issues"
  },
  "homepage": "https://github.com/SiarhKul/webkit#readme",
  "description": "",
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
