{
  "name": "webkit",
  "version": "1.0.0",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "build": "tsc",
    "start:local": "cross-env NODE_ENV=local tsx watch src/main.ts",
    "start:test": "cross-env NODE_ENV=test tsx watch src/main.ts",
    "start:dev": "cross-env NODE_ENV=development tsx watch src/main.ts",
    "start:prod": "cross-env NODE_ENV=production tsx src/main.ts",
    "prepare": "husky",
    "typeorm": "typeorm-ts-node-esm",
    "migration:generate": "npm run typeorm -- migration:generate -d src/integrations/data-source.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/integrations/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/integrations/data-source.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^2.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-validator": "^7.3.0",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "0.3.27",
    "winston": "^3.18.3",
    "winston-loki": "^6.1.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.9.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.38.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SiarhKul/webkit.git"
  },
  "bugs": {
    "url": "https://github.com/SiarhKul/webkit/issues"
  },
  "homepage": "https://github.com/SiarhKul/webkit#readme",
  "description": "",
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
